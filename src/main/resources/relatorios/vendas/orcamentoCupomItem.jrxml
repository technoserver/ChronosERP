                <textElement>
                    <font fontName="Ubuntu Condensed" size="6"/>
                </textElement>
                <textFieldExpression><![CDATA[($F{codigo}!=null ? $F{codigo}: new DecimalFormat("000000").format(Double.valueOf($F{id})))
+" - "+$F{nome}]]></textFieldExpression>
            </textField>
            <textField>
